{
	"name": "leetroyale",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "npm-run-all --parallel dev:frontend dev:backend",
		"dev:frontend": "next dev",
		"dev:backend": "convex dev",
		"predev": "convex dev --until-success && convex dev --once --run-sh \"node setup.mjs --once\" && convex dashboard",
		"build": "next build",
		"start": "next start",
		"lint": "biome lint ./",
		"format": "biome format ./ --write --unsafe",
		"check": "biome check ./ --write --unsafe"
	},
	"dependencies": {
		"@convex-dev/auth": "^0.0.90",
		"convex": "^1.27.3",
		"next": "15.5.4",
		"react": "^19.2.0",
		"react-dom": "^19.2.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.5",
		"@tailwindcss/postcss": "^4.1.14",
		"@types/node": "^24.6.2",
		"@types/react": "^19.2.0",
		"@types/react-dom": "^19.2.0",
		"dotenv": "^17.2.3",
		"npm-run-all": "^4.1.5",
		"tailwindcss": "^4.1.14",
		"typescript": "^5.9.3"
	}
}
